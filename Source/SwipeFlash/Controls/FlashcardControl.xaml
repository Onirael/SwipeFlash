<UserControl x:Class="SwipeFlash.FlashcardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SwipeFlash"
             xmlns:core="clr-namespace:SwipeFlash.Core;assembly=SwipeFlash.Core"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d"
             Width="300" Height="400"
             local:AnimateFlipProperty.Value="{Binding IsFlipped}"
             local:AnimateSwipeLeftProperty.Value="{Binding IsSwipedLeft}"
             local:AnimateSwipeRightProperty.Value="{Binding IsSwipedRight}"
             local:InputBindingBehavior.PropagateInputBindingsToWindow="{Binding HasInput}"
             local:IsPendingDestroyProperty.Value="{Binding IsPendingDestroy}"
             local:AnimateQueuePositionProperty.Value="{Binding CardQueuePosition}">

    <UserControl.Resources>
        <Style x:Key="ContentStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Grid>
                            <Border Name="cardContainer"
                                    Background="{StaticResource BackgroundLightBrush}"
                                    CornerRadius="20"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource ForegroundDarkBrush}">

                                <Border.Effect>
                                    <DropShadowEffect Opacity=".2" BlurRadius="20" ShadowDepth="0"/>
                                </Border.Effect>

                                <Grid>
                                    <!-- Icon -->
                                    <emoji:TextBlock Text="{Binding Side1Icon}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     FontSize="{StaticResource FontSizeLarger}"
                                                     Margin="30 30"
                                                     Visibility="{Binding IsOnSide1, Converter={local:BooleanToVisibilityConverter}}"/>

                                    <emoji:TextBlock Text="{Binding Side2Icon}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     FontSize="{StaticResource FontSizeLarger}"
                                                     Margin="30 30"
                                                     Visibility="{Binding IsOnSide1, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=True}"/>

                                    <!-- Content -->
                                    <Grid Margin="50" Name="textContainer">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Stock image -->
                                        <Border x:Name="imageContainer"
                                                Grid.Row="0"
                                                Height="150"
                                                Width="{Binding ActualHeight, ElementName=imageContainer}"
                                                BorderThickness="3"
                                                BorderBrush="{StaticResource ForegroundDarkBrush}"
                                                CornerRadius="150"
                                                Visibility="{Binding IsImageVisible, Converter={local:BooleanToCollapsedVisibilityConverter}}">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Illustration}"/>
                                            </Border.Background>
                                        </Border>

                                        <!-- Text -->
                                        <Viewbox Grid.Row="1">
                                            <TextBlock Text="{Binding Side1Text}" 
                                                       MaxWidth="{Binding ActualWidth, ElementName=textContainer}"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"
                                                       FontSize="{StaticResource FontSizeVeryLarge}"
                                                       TextWrapping="WrapWithOverflow"
                                                       Visibility="{Binding IsOnSide1, Converter={local:BooleanToVisibilityConverter}}"/>
                                        </Viewbox>

                                        <Viewbox Grid.Row="1">
                                            <TextBlock Text="{Binding Side2Text}" 
                                                       MaxWidth="{Binding ActualWidth, ElementName=textContainer}"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"
                                                       FontSize="{StaticResource FontSizeVeryLarge}"
                                                       TextWrapping="WrapWithOverflow"
                                                       Visibility="{Binding IsOnSide1, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=True}"/>
                                        </Viewbox>
                                    </Grid>
                                </Grid>

                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <UserControl.InputBindings>
        <!-- Flip on click -->
        <MouseBinding MouseAction="LeftClick" Command="{Binding FlipCommand}"/>
        <!-- Flip on spacebar press -->
        <KeyBinding Key="Space" Command="{Binding FlipCommand}"/>
        <!-- Swipe left -->
        <KeyBinding Key="Left" Command="{Binding SwipeLeftCommand}"/>
        <!-- Swipe right -->
        <KeyBinding Key="Right" Command="{Binding SwipeRightCommand}"/>
        <!-- Undo swipe -->
        <KeyBinding Key="R" Command="{Binding UndoSwipeCommand}"/>
    </UserControl.InputBindings>


    <ContentControl d:DataContext="{x:Static core:FlashcardDesignModel.Instance}"
                    Style="{StaticResource ContentStyle}"/>

</UserControl>
