<UserControl x:Class="SwipeFlash.FlashcardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SwipeFlash"
             xmlns:core="clr-namespace:SwipeFlash.Core;assembly=SwipeFlash.Core"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d"
             Width="300" Height="400"
             local:AnimateFlipProperty.Value="{Binding IsFlipped}"
             local:AnimateSwipeLeftProperty.Value="{Binding IsSwipedLeft}"
             local:AnimateSwipeRightProperty.Value="{Binding IsSwipedRight}"
             local:IsInputBindingEnabledProperty.Value="{Binding IsInputEnabled}"
             local:IsPendingDestroyProperty.Value="{Binding IsPendingDestroy}"
             local:AnimateQueuePositionProperty.Value="{Binding CardQueuePosition}">

    <local:StoredInputBindingsProperty.Value/>

    <UserControl.Resources>
        <Style x:Key="ContentStyle" TargetType="{x:Type ContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Grid>
                            <Border Name="cardContainer"
                                    Background="{StaticResource BackgroundLightBrush}"
                                    CornerRadius="20"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource ForegroundDarkBrush}"
                                    ClipToBounds="True">

                                <Border.Effect>
                                    <DropShadowEffect Opacity=".2" BlurRadius="20" ShadowDepth="0"/>
                                </Border.Effect>

                                <Grid>
                                    <Border Background="#e8e8e8"
                                            Height="200"
                                            VerticalAlignment="Top"
                                            CornerRadius="20"
                                            local:AnimateContentSlideInFromTopProperty.Value="{Binding IsInEditMode}"
                                            Visibility="{Binding IsEditContentVisible, Converter={local:BooleanToVisibilityConverter}}"
                                            IsHitTestVisible="False">
                                    </Border>

                                    <!-- Icon -->
                                    <emoji:TextBlock Text="{Binding Side1Icon}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     FontSize="{StaticResource FontSizeLarger}"
                                                     Margin="30 30"
                                                     Visibility="{Binding IsSide1Visible, Converter={local:BooleanToVisibilityConverter}}"/>

                                    <emoji:TextBlock Text="{Binding Side2Icon}"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Top"
                                                     FontSize="{StaticResource FontSizeLarger}"
                                                     Margin="30 30"
                                                     Visibility="{Binding IsSide2Visible, Converter={local:BooleanToVisibilityConverter}}"/>

                                    <!-- Content -->
                                    <Grid Margin="50" Name="textContainer">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Stock image -->
                                        <Border x:Name="imageContainer"
                                                Grid.Row="0"
                                                Height="150"
                                                Width="{Binding ActualHeight, ElementName=imageContainer}"
                                                BorderThickness="3"
                                                BorderBrush="{StaticResource ForegroundDarkBrush}"
                                                CornerRadius="150"
                                                Visibility="{Binding IsImageVisible, Converter={local:BooleanToCollapsedVisibilityConverter}}">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Illustration}" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>

                                        <!-- Text -->
                                        <Viewbox Grid.Row="1">
                                            <Grid>
                                                <!-- Side 1 text -->
                                                <TextBlock Name="text1"
                                                           Text="{Binding Side1Text}" 
                                                           MaxWidth="{Binding ActualWidth, ElementName=textContainer}"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Center"
                                                           FontSize="{StaticResource FontSizeVeryLarge}"
                                                           TextWrapping="WrapWithOverflow"
                                                           Visibility="{Binding IsSide1Visible, Converter={local:BooleanToVisibilityConverter}}"/>
                                                
                                                <!-- Edit mode side 1 input -->
                                                <TextBox Text="{Binding Side1EditText}"
                                                         MaxWidth="{Binding MaxWidth, ElementName=text1}"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         TextAlignment="Center"
                                                         FontSize="{Binding FontSize, ElementName=text1}"
                                                         TextWrapping="WrapWithOverflow"
                                                         Visibility="{Binding IsEditContentVisible, Converter={local:BooleanToVisibilityConverter}}"
                                                         Background="Transparent"
                                                         Margin="0 -50 0 50"
                                                         local:SelectAllTextOnFocusProperty.Value="True"/>
                                            </Grid>
                                        </Viewbox>

                                        <Viewbox Grid.Row="1">
                                            <Grid>
                                                <!-- Side 2 text -->
                                                <TextBlock Text="{Binding Side2Text}" 
                                                           MaxWidth="{Binding ActualWidth, ElementName=textContainer}"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Center"
                                                           FontSize="{StaticResource FontSizeVeryLarge}"
                                                           TextWrapping="WrapWithOverflow"
                                                           Visibility="{Binding IsSide2Visible, Converter={local:BooleanToVisibilityConverter}}"/>
                                                
                                                <!-- Edit mode side 2 input -->
                                                <TextBox Text="{Binding Side2EditText}"
                                                         MaxWidth="{Binding MaxWidth, ElementName=text1}"
                                                         VerticalAlignment="Center"
                                                         TextAlignment="Center"
                                                         HorizontalAlignment="Center"
                                                         FontSize="{Binding FontSize, ElementName=text1}"
                                                         TextWrapping="WrapWithOverflow"
                                                         Visibility="{Binding IsEditContentVisible, Converter={local:BooleanToVisibilityConverter}}"
                                                         Background="{StaticResource BackgroundLightBrush}"
                                                         Margin="0 50 0 -50"
                                                         local:SelectAllTextOnFocusProperty.Value="True"/>
                                            </Grid>
                                        </Viewbox>
                                    </Grid>

                                    <!-- Enable card illustration input -->
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Bottom"
                                                HorizontalAlignment="Right"
                                                Margin="20"
                                                Visibility="{Binding IsEditContentVisible, Converter={local:BooleanToVisibilityConverter}}">
                                        <TextBlock Text="Enable card illustration"
                                                   VerticalAlignment="Center"/>
                                        <CheckBox Height="20" 
                                                  Margin="5 3 0 0"
                                                  IsChecked="{Binding HasIllustrationEdit}"/>
                                    </StackPanel>

                                    <!-- Image credit -->
                                    <TextBlock HorizontalAlignment="Right"
                                               VerticalAlignment="Bottom"
                                               Margin="0 0 20 10"
                                               FontSize="{StaticResource FontSizeSmaller}"
                                               Foreground="{StaticResource ForegroundDarkBrush}"
                                               Visibility="{Binding IsImageVisible, Converter={local:BooleanToVisibilityConverter}}"
                                               Text="{Binding ImageCreditText}"/>

                                </Grid>
                            </Border>
                            
                            <!-- End of stack card -->
                            <Border Background="{StaticResource ForegroundDarkBrush}"
                                    CornerRadius="20"
                                    Visibility="{Binding IsEndOfStackCard, Converter={local:BooleanToVisibilityConverter}}">
                                <Viewbox Margin="20">
                                    <TextBlock Text="End of stack reached" 
                                               Width="400"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Foreground="{StaticResource BackgroundLightBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="{StaticResource FontSizeHuge}"/>
                                </Viewbox>
                            </Border>
                            
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <UserControl.InputBindings>
        <!-- Flip on click -->
        <MouseBinding MouseAction="LeftClick" Command="{Binding FlipCommand}"/>
        <!-- Flip on spacebar press -->
        <KeyBinding Key="Space" Command="{Binding FlipCommand}"/>
        <!-- Swipe left -->
        <KeyBinding Key="Left" Command="{Binding SwipeLeftCommand}"/>
        <!-- Swipe right -->
        <KeyBinding Key="Right" Command="{Binding SwipeRightCommand}"/>
        <!-- Undo swipe -->
        <KeyBinding Key="R" Command="{Binding UndoSwipeCommand}"/>
    </UserControl.InputBindings>


    <ContentControl d:DataContext="{x:Static core:FlashcardDesignModel.Instance}"
                    Style="{StaticResource ContentStyle}"/>

</UserControl>
